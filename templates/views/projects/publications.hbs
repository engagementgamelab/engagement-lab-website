<!-- PUBLICATIONS START -->
<section class="main-container">
	<div class="container">
		<div class="main">
			<div class="row">
				<div class="col-md-12">
					<h1 class="page-title"><strong>Publications</strong></h1>
					{{> page/lead}}
				</div>
			</div>
		</div>
	</div>

	<div class="row filters">
		{{#each filters}}
			{{#each this}}
				<div class="btn-group clearfix">
				<button id="button-group-{{@key}}" class="publication-options btn btn-default dropdown-toggle" type="button" data-filter-group="{{@key}}" data-toggle="dropdown">
				<div class="button-text">{{@key}} <span class="{{@key}}-number filter-counter"> </span><span class="bigCaret"></span></div>
				</button>
				<ul class="dropdown-menu scrollable" role="menu">
					<li><a id="{{@key}}:all" data-filter=""  href="#" data-filter-value="" data-filter-group="{{key}}" class="all-options option-authors">All {{@key}}</a></li>
					{{#each this}}
					<li><a id="{{category}}:{{key}}" value="#" href="#" data-filter-value=".{{key}}" data-filter-group="{{category}}" class="option-{{category}}">{{name}}</a></li>
					{{/each}}
				</ul>
			</div>
			{{/each}}
		{{/each}}
		<div class="btn-group clearfix">
			<button class="syllabi-options clear-all btn btn-default dropdown-toggle" type="button" data-filter-value="">Reset</button>
		</div>
	</div>

	{{#if publications}}
		<div class="container">
			{{#each publications}}
			{{{jsonPrint this}}}
				<a id="{{@key}}" name="{{@key}}">&nbsp;</a>
				<div class="row">
					<div class="col-md-12">
						<h3>{{@key}}</h3>
						<div class="separator-5"></div>
					</div>
				</div>
				{{!-- filters start --}}
					{{!-- 				
						{{#if this.sub_sections}}
							<div class="row">
								<div class="col-md-12">
									<div class="filters mb-40">
										<ul class="nav nav-pills">
											<li class="active"><a href="#" data-filter=".{{@key}}, .none">All</a></li>
											{{#each this.sub_sections}}
											<li><a href="#" data-filter=".{{@key}}.{{key}}, .none">{{name}}</a></li>
											{{/each}}
										</ul>
									</div>
								</div>
							</div>
						{{/if}} 
					--}}
				{{!-- filters end --}}
						
				{{#if this.isArticle}}
				Article: {{this.isArticle}}
				<div class="row">
					{{#each records}}
						{{> publications/list_item listing=this}}
					{{/each}}
				</div>
				{{else}}
				Not Article: {{this.isArticle}}
				<div class="row">
					{{#each records}}
						{{> publications/grid_item listing=this}}
					{{/each}}
				</div>
				{{/if}}

			{{/each}}
		</div>
	{{/if}}
</section>