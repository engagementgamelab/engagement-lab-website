<section class="cmap">
	<section class="section">
		<div class="container">
			<div class="row">
				<div class="col-md-4">
					<img src="{{{cloudinaryUrl cmap.logo width=600 height=450 crop='fill' quality=80}}}">
				</div>
				<div class="col-md-8 description">
					<p class="lead"><span class="inline-header">The MA in Civic Media, Art &amp; Practice</span> {{{cmap.programDescription.html}}}</p>
				</div>
			</div>
		</div>
	</section>
	<section class="section" id="apply">
		<div class="container">
			<div class="row">
				<div class="col-md-12">
					<h3 class="section-header mb-20">Is CMAP the right program for you?</h3>
				</div>

				<div class="col-md-6 mb-20">
					<div class="embed-responsive embed-responsive-16by9">
						<iframe src="//player.vimeo.com/video/146805861" webkitallowfullscreen mozallowfullscreen allowfullscreen></iframe>
					</div>
				</div>

				<div class="col-md-6">
					<div class="lead">{{{cmap.apply1.html}}}</div>
				</div>
				
				<div class="col-md-12">
					<div class="lead">{{{cmap.apply2.html}}}</div>
				</div>
			</div>
		</div>
	</section>

	<section class="section" id="elements">
		<div class="container">
			<div class="row">
				<div class="col-md-12">
					<h3 class="section-header mb-40">Core Elements of the CMAP Experience</h3>
				</div>
			</div>
			<div class="row dark" id="columns">
				{{#each elements}}
					<div class="col-sm-6 col-md-3 text-center column pv-20" id="element-{{@index}}">
						<h3 class="ph-20">{{header}}</h3>
						<h4 class="pv-20">{{subheader}}</h4>
						<p>{{element}}</p>
					</div>
				{{/each}}
			</div>
		</div>
	</section>

{{!-- Quotes Section -- To Add In Later --}}

	<section class="section" id="student-quotes">
		<div class="container">
			<div class="row">
				<div class="col-md-12">
					<h3 class="section-header mb-40">Quotes</h3>
					<div class="row">
						{{#each cmapQuotes}}
							<div class="col-lg-6 col-sm-6 col-xs-12 quote">
								<img src="https://res.cloudinary.com/engagement-lab-home/image/upload/v1487613850/topquote_vrbnid.png" height='25px' width='25px'>
								{{{this.quote.html}}}
								<img src="https://res.cloudinary.com/engagement-lab-home/image/upload/v1487613858/bottomquote_bxq6vh.png" height='25px' width='25px'>

								<div class="quote-author">- {{this.person.name.last}}, {{this.person.name.first}}</div>
							</div>
							
						{{/each}}
					</div>
				</div>
			</div>
		</div>
	</section>

	<section class="section dark" id="curriculum">
		<div class="container">
			<div class="row">
				<div class="col-md-12">
					<h3 class="section-header">Curriculum</h3>
					<div class="lead">{{cmap.curriculum}}</div>
				</div>
			</div>
		</div>
	</section>

	<section class="section dark" id="structure">
		<div class="container">
			<div class="row">
				<div class="col-md-12">
					<h3 class="section-header">The Structure</h3>
					<div class="lead">{{{cmap.structure.html}}}</div>
				</div>
			</div>
		</div>
	</section>
	<section class="section dark" id="courses">
		<div class="container">
			<div class="row">
				<div class="col-md-12">
					<h3 class="section-header">Core Courses</h3>
					<div class="lead">{{{cmap.courses.html}}}</div>
				</div>
			</div>
		</div>
	</section>
	
	{{#if faculty}}
	<section class="section" id="faculty">
		<div class="container">
			<div class="row">
				<div class="col-md-12">
					<h3 class="section-header mb-40">Faculty</h3>
				</div>
			</div>
			
				<div class="row grid-space-10">
				{{!-- Show leadership --}}
					{{#each faculty}}
						{{> people/person person=this}}
					{{/each}}
				</div>
		</div>
	</section>
	{{/if}}

	{{#if students}}
	<section class="section" id="students">
		<div class="container">
			<div class="row">
				<div class="col-md-12">
					<h3 class="section-header mb-40">Students</h3>
				</div>
			</div>
			
				<div class="row grid-space-10">
				{{!-- Show leadership --}}
					{{#each students}}
						{{> people/person person=this}}
					{{/each}}
				</div>
			
		</div>
	</section>
	{{/if}}

	{{#if projects}}
	<section class="section" id="projects">
		<div class="container">
			<div class="row">
				<div class="col-md-12">
					<h3 class="section-header">Student Projects</h3>
				</div>
			</div>
			<div class="row">
				{{!-- Show projects --}}
				{{#each projects}}
					{{> sublisting listing=this}}
				{{/each}}
			</div>
		</div>
	</section>
	{{/if}}
</section>
